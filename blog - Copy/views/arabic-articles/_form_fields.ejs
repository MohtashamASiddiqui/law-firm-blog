<div class="form-group">
  <label for="title">Title</label>
  <input
    required
    value="<%= article.title %>"
    type="text"
    name="title"
    id="title"
    class="form-control"
  />
</div>
<div class="form-group">
  <label for="date">Date</label>
  <input
    required
    value="<%= article.date %>"
    type="text"
    name="date"
    id="date"
    class="form-control"
  />
</div>
<div class="form-group">
  <label for="date">People</label>
  <input
    value="<%= article.people1 %>"
    type="text"
    name="people1"
    id="people1"
    class="form-control"
  />
</div>
<div class="form-group">
  <label for="date">People</label>
  <input
    value="<%= article.people2 %>"
    type="text"
    name="people2"
    id="people2"
    class="form-control"
  />
</div>
<div class="form-group">
  <label for="date">People</label>
  <input
    value="<%= article.people3 %>"
    type="text"
    name="people3"
    id="people3"
    class="form-control"
  />
</div>
<div class="form-group">
  <label for="description">Description</label>
  <textarea name="description" id="description" class="form-control">
<%= article.description %></textarea
  >
</div>
<div class="form-group">
  <label for="markdown">Full content</label>
  <textarea required name="markdown" id="markdown" class="form-control">
<%= article.markdown %></textarea
  >
</div>

